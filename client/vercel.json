{
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://server-cloudplay.vercel.app/api/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "https://cloudplay.vercel.app" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,POST,PUT,DELETE,OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, auth-token" },
        { "key": "Access-Control-Allow-Credentials", "value": "true" }
      ]
    }
  ]
}